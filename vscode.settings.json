{
    "sync.gist": "a98ed9dc6423805678006ef8a6addb23",
    "files.autoSave": "afterDelay",
    
    //Security
    "security.workspace.trust.enabled": false,
    
    //Git
    "git.autofetch": true,
    "git.confirmSync": false,
    
    //Window
    "window.density.editorTabHeight": "compact",
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "auto",
    "window.closeWhenEmpty": false,
    "window.menuBarVisibility": "hidden",
    "apc.menubar.compact": true,
    "apc.activityBar": {
        "size": 24,
        "itemSize": 24,
        "itemMargin": 3
    },

    //Workbench
    "workbench.activityBar.location": "top",
    "workbench.colorCustomizations": {
        // "editorSuggestWidget.background": "#ff0000",
        "list.activeSelectionBackground": "#5d3e96",
        "list.inactiveFocusOutline": "#43257b",
        "list.focusBackground": "#634b8f",
        "list.hoverBackground": "#4a3670"

    },
    "explorer.compactFolders": false,

    //Editor
    "editor.minimap.enabled": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Noto Sans Mono', monospace",
    "editor.fontLigatures": true,
    "editor.glyphMargin": false,
    "editor.smoothScrolling": true,
    "editor.autoClosingQuotes": "always",
    "editor.autoClosingBrackets": "always",
    //cursor
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": "on",
    "emmet.excludeLanguages": [
        "python"
    ],
    



    //Shell scripts
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format",
        "editor.codeActionsOnSave": {
            "source.fixAll.shellcheck": "explicit"  // Fix all errors
        },
        "editor.formatOnSave": true
    },

    
    //Python
    "python.languageServer": "Jedi",
    
    "[python]": {
        
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },

    //Javascript
    "[javascript, json, jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": false,
        "prettier.semi": true
    },
    //Terminal
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.cursorStyle": "line",
    
    // Editor Font schema colorize
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            //Comments
            { 
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#666666"
                }
            },
            
            { 
                "scope": "comment.block",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#f70505"
                }
            },
            //Variables
            {
                "scope": "variable",
                "settings": {
                    "foreground": "#58b1b3",
                }
            }, 
            {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#468482",
                }
            }, 
            { // data type
                "scope": "support.type",
                "settings": {
                    "foreground": "#aa9a36",
                }
            }, 
            //Methods
            // {
            //     "scope": "TODO",
            //     "settings": {
            //         "foreground": "#e40f99",
            //     }
            // }, 
            //Strings 
            {
                "scope": "string.unquoted",
                "settings": {
                    "foreground": "#9ab981"
                }
            },
            {
                "scope": "string.quoted.single",
                "settings": {
                    "foreground": "#678f46"
                }
            },
            {
                "scope": "string.quoted.double",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#538e23"
                }
            },
            {
                "scope": "string.quoted.triple",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#355e14"
                }
            },
            //Classes 
            {
                "scope": "entity.name.type.class",
                "settings": {
                    "fontStyle": "italic bold",
                    "foreground": "#8b38c3",
                }
            },
            {
                "scope": "entity.other.inherited-class",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#7e2cb5",
                }
            },
            //Functions
            {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#ad3636",
                }
            },
            {
                "scope": "support.function",
                "settings": {
                    "foreground": "#6f3f35"
                }
            },
            //keywords 
            {
                "scope": "keyword",
                "settings": {
                    "foreground": "#aa6fc1"
                }
                
            },
            {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#eed010"
                }
            },
            {
                "scope": "entity.name.class",
                "settings": {
                    "foreground": "#721696"
                }
            }
        ]
    },
    
    //shellcheck settings
    "shellcheck.customArgs": ["-x"],
    "shellcheck.exclude": ["1090"],
    "shellcheck.ignorePatterns": {
        "**/*rc": true
    },
    //Spell check setting
    "cSpell.userWords": [
        "autofetch",
        "Consolas",
        "devel",
        "esbenp",
        "Fira",
        "flameshot",
        "foxundermoon",
        "galculator",
        "Noto",
        "Pylance",
        "pylint",
        "shellcheck",
        "timonwong"
    ],
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.iconTheme": "material-icon-theme",
    
    //files associations
    "files.associations": {
        "*.list": "config",
        "*.config": "config"
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false
}