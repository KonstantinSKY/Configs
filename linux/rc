	then
		alias rm='trash'
		alias Trash="trash --help; ls -la ~/.local/share/Trash/files"
fi

#ssh
alias rsss="remote_start_sudo_script.sh"
alias server="ssh server"



#fn to choose editor
choose_editor() {
  if command -v nvim >/dev/null 2>&1;
	 then
	       nvim "$@"
          else
         vi "$@"
    fi
}
#alias 'vi' to use 'choose_editor'
alias vi=choose_editor
alias ge=gemini
#git
alias commit="make --no-print-directory -C ~/Configs/git full_commit"

