# alias z='zeditor "${1:-.}"'  #zeditor
z() {
  if [ -n "$1" ]; then
    zeditor "$1"
  else
    zeditor .
  fi
}
# git && github
alias mkrepo="~/Configs/git/make_private_repo.sh"

#Trash
