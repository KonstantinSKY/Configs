.PHONY: install clean

MANJARO_MAKEFILE = ~/Configs/manjaro/Makefile
ZED_CONFIG = ~/Configs/zed/config
ZED_TARGET_CONFIG = ~/.config/zed

install:
	@echo "Installing zed..."
	yay -S zed --noconfirm
	@echo "âœ… Zed installed."
	@echo "ðŸ”— Linking Zed config folder..."
	ln -sf $(ZED_CONFIG) $(ZED_TARGET_CONFIG)


clean:
	@echo "Cleaning zed..."
	@echo "âœ… Zed cleaned."
