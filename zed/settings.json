{
  // ==========================================
  // COMMON MODES
  // ==========================================
  "vim_mode": true,
  // ==========================================
  // PRIVACY SETTINGS
  // ==========================================
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "privacy": {
    "enabled": true,
    "anonymize_data": true,
    "log_level": "info"
  },
  "private_files": [
    "**/.env*",
    "**/*.pem",
    "**/*.key",
    "**/*.cert",
    "**/*.crt",
    "**/secrets.yml"
  ],
  // ==========================================
  // ON SAVE ACTIONS
  // ==========================================
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,

  // ==========================================
  // THEMES
  // ==========================================
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "One Dark"
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Material Icon Theme",
    "dark": "Material Icon Theme"
  },
  "experimental.theme_overrides": {
    "syntax": {
      "keyword": {
        "color": "#A18FCB",
        "font_weight": 200
      },
      "variable": {
        "color": "#B9A37D",
        "font_weight": 200
      },
      "string": {
        "color": "#8FAA91",
        "font_weight": 100,
        "font_style": "italic"
      },
      "comment": {
        "color": "#5C6370",
        "font_weight": 100,
        "font_style": "italic"
      },
      "number": {
        "color": "#C9B08F",
        "font_weight": 100
      },
      "operator": {
        "color": "#8FAA91",
        "font_weight": 100
      },
      "punctuation": {
        "color": "#FF0000",
        "font_weight": 100
      },
      "boolean": {
        "color": "#8FAA91",
        "font_weight": 100
      },
      "null": {
        "color": "#8FAA91",
        "font_weight": 100
      },
      "undefined": {
        "color": "#8FAA91",
        "font_weight": 100
      },
      "key": {
        "color": "#8FAA91",
        "font_weight": 100
      },
      "value": {
        "color": "#8FAA91",
        "font_weight": 100
      },
      "property": {
        "color": "#E5C07B",
        "font_weight": 200
      },
      "attribute": {
        "color": "#E5C07B",
        "font_weight": 100
      },
      "namespaces": {
        "color": "#56B6C2",
        "font_weight": 200
      },
      "names": {
        "color": "#D19A66",
        "font_weight": 200
      },
      "constant": {
        "color": "#FF5555",
        "font_weight": 200
      },
      "functions": {
        "color": "#61AFEF",
        "font_weight": 200
      }
      // "inlayhints": {
      //   "color": "#FF5555",
      //   "font_weight": 100
      // }
    }
  },

  // ==========================================
  //  FONTS
  // ==========================================
  // "ui_font_family": "JetBrains Mono",
  "ui_font_size": 16,
  // Editor
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 200,

  "blinking": "on",
  "cursor_blink": true,
  // "color": "red",

  // ==========================================
  // TERMINAL
  // ==========================================
  "terminal": {
    "shell": {
      "program": "/bin/zsh"
    },
    "font_family": "JetBrains Mono",
    "font_size": 14,
    "font_weight": 200,
    "blinking": "on",
    "cursor_shape": "bar"
  },
  //==========================================
  // GIT
  // ==========================================
  "git": {
    "git_binary_path": "/usr/bin/git",
    "inline_blame": {
      "enabled": false // to show when commited line
    },
    "git_gutter": "tracked_files",
    "gutter_debounce": 3000
  },

  "tabs": {
    "git_status": true,
    "git_status_position": "right",
    "git_status_icon": "git",
    "git_status_icon_position": "left",
    "show_diagnostics": "all"
  },

  "diagnostics": {
    "show_diagnostics": "all"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  }

